{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",  
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                               
  },
  "include": ["src/**/*", "ui/**/*"],
  "exclude": ["node_modules"]
}
